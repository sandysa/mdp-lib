bool PPDDLProblem::applicable(mlcore::State* s, mlcore::Action* a) const
{
    PPDDLAction* action = (PPDDLAction *) a;
    PPDDLState* state = (PPDDLState *) s;

    return action->pAction()->enabled(*state->pState());
}

